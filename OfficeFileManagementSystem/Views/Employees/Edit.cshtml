@model OfficeFileManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h5 class="px-md-5">Edit Record of @Model.Employee_Name</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Emp_Id" />
            <div class="form-group">
                <label asp-for="Employee_Name" class="control-label"></label>
                <input asp-for="Employee_Name" class="form-control" />
                <span asp-validation-for="Employee_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee_Designation" class="control-label"></label>
                <input asp-for="Employee_Designation" class="form-control" />
                <span asp-validation-for="Employee_Designation" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                @Html.Partial("_BackButtonList")
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
