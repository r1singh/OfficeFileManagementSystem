@model IEnumerable<OfficeFileManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class= "btn btn-outline-success" asp-action="Create">
        <span class="glyphiocn glyphicon-plus"></span>
        Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Designation)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Designation)
            </td>
          
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Emp_Id">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Emp_Id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Emp_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
